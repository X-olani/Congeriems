<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCategory">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/idTVHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Edit Category"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/txtLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVHeader"
            android:layout_marginTop="110dp"
            android:padding="5dp"
            android:text="Category name"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edtCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLabel"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:hint=""
            android:inputType="textEmailAddress" />




        <TextView
            android:id="@+id/txtLabel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtCategory"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="Goal for the Category"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/edtGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLabel2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:hint=""
            android:inputType="number" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtGoal"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="109dp"
            android:layout_marginEnd="46dp"
            android:layout_toStartOf="@+id/btnDone"
            android:text="CANCEL"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtGoal"

            android:layout_alignParentEnd="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="111dp"
            android:layout_marginEnd="50dp"
            android:text="DONE"
            android:textAllCaps="false" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>