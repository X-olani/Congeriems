<?xml version="1.0" encoding="utf-8"?>
<ScrollView
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".achievements">

    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    android:padding="20dp"
    >


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Starter"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPen1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textSize="30dp"

        app:layout_constraintBottom_toBottomOf="@+id/progressBarStarter"
        app:layout_constraintEnd_toEndOf="@+id/progressBarStarter"
        app:layout_constraintStart_toStartOf="@+id/progressBarStarter"
        app:layout_constraintTop_toTopOf="@+id/progressBarStarter" />

    <ImageView
        android:id="@+id/imgStarter"
        android:layout_width="73dp"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBarStarter"
        app:layout_constraintEnd_toEndOf="@+id/progressBarStarter"
        app:layout_constraintStart_toStartOf="@+id/progressBarStarter"
        app:layout_constraintTop_toTopOf="@+id/progressBarStarter" />

    <ProgressBar
        android:id="@+id/progressBarStarter"
        android:layout_width="173dp"
        android:layout_height="160dp"
        android:layout_marginTop="53dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:progress="50"></ProgressBar>

    <TextView
        android:id="@+id/textCollect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Collector"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBarStarter" />


    <ImageView
        android:id="@+id/imgCollect"
        android:layout_width="73dp"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressCollect"
        app:layout_constraintEnd_toEndOf="@+id/progressCollect"
        app:layout_constraintStart_toStartOf="@+id/progressCollect"
        app:layout_constraintTop_toTopOf="@+id/progressCollect" />

    <ProgressBar
        android:id="@+id/progressCollect"
        android:layout_width="159dp"
        android:layout_height="148dp"
        android:layout_marginTop="53dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCollect"
        tools:progress="50"></ProgressBar>

    <TextView
        android:id="@+id/txtPen2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressCollect"
        app:layout_constraintEnd_toEndOf="@+id/progressCollect"
        app:layout_constraintStart_toStartOf="@+id/progressCollect"
        app:layout_constraintTop_toTopOf="@+id/progressCollect">

    </TextView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Packrat"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressCollect"></TextView>

    <ProgressBar
        android:id="@+id/progressPackrat"
        android:layout_width="139dp"
        android:layout_height="118dp"
        android:progressDrawable="@drawable/circle"
        android:layout_marginTop="40dp"
        android:indeterminateOnly="false"
        tools:progress="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"></ProgressBar>


    <TextView
        android:id="@+id/txtPen3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"

        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressPackrat"
        app:layout_constraintEnd_toEndOf="@+id/progressPackrat"
        app:layout_constraintStart_toStartOf="@+id/progressPackrat"
        app:layout_constraintTop_toTopOf="@+id/progressPackrat" />

    <ImageView
android:id="@+id/imgTolevel"
        android:layout_width="73dp"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressPackrat"
        app:layout_constraintEnd_toEndOf="@+id/progressPackrat"
        app:layout_constraintStart_toStartOf="@+id/progressPackrat"
        app:layout_constraintTop_toTopOf="@+id/progressPackrat" />

</androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>
